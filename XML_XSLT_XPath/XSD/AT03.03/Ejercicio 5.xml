<?xml version="1.0" encoding="UTF-8"?>
<guarderia xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="AT03.03.04a.xsd">
     <niño numeroExpediente="2344" codigo="P44-323">
         <nombre>Noa Blanco Coello</nombre>
         <sexo tipo="M"/>
         <fechaNacemento>2010-10-12</fechaNacemento>
         <peso>13.5</peso>
         <altura>78</altura>
         <edad anos="3" meses="5"/>
         <vacunas>true</vacunas>
         <contacto>
            <telefono parentesco="Padre">654733907</telefono>
            <telefono parentesco="Madre">654733907</telefono>
        </contacto>
     </niño>
</guarderia>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="guarderia">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="niño">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="nombre" type="t_nombre"/>
                            <xs:element name="sexo">
                                <xs:complexType>
                                    <xs:attribute name="tipo" type="t_sexo" use="required"/>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="fechaNacemento" type="xs:date"/>
                            <xs:element name="peso" type="t_peso"/>
                            <xs:element name="altura" type="xs:integer"/>
                            <xs:element name="edad">
                                <complexType>
                                    <xs:attribute name="anos" type="t_anos"/>
                                    <xs:attribute name="meses" type="t_meses"/>
                            <xs:element name="vacunas" type="xs:boolean"/>
                            <xs:element name="contacto">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="telefono" type="t_telefono" minOccurs="1" maxOccurs="4">
                                            <xs:complexType>
                                                <xs:attribute name="parentesco" type="t_parentesco"/>
                                            </xs:complexType>
                                        </xs:element>
                        </xs:sequence>
                            <xs:attribute name="numeroExpediente" type="xs:integer"/>
                            <xs:attribute name="codigo" type="t_codigo"/>      
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:simpleType name="t_sexo">
        <xs:restriction base="xs:string">
            <xs:pattern value="H|M"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="t_peso">
        <xs:restriction base="xs:decimal">
            <xs:fractionDigits value="1"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="t_nombre">
        <xs:restriction base="xs:string">
            <xs:minLength value="3"/>
            <xs:maxLength value="80"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="t_codigo">
        <xs:restriction base="xs:string">
            <xs:pattern value="[P|M][3-7]{2}\-[0-9]{3}"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="t_parentesco">
        <xs:restriction base="xs:string">
            <xs:pattern value="Madre|Padre|Abuelo|Abuela|Tutor"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="t_telefono">
        <xs:restriction base="xs:integer">
            <xs:pattern value="[0-9]{9}"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:simpleType name="t_anos">
        <xs:restriction base="xs:integer">
            <xs:pattern value="[0-3]{1}"/>
        </xs:restriction>
    </xs:simpleType>

     <xs:simpleType name="t_meses">
        <xs:restriction base="xs:integer">
            <xs:pattern value="[0-11]{1}"/>
        </xs:restriction>
    </xs:simpleType>




</xs:schema>
