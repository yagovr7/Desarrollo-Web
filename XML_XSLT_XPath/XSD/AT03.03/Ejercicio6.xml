XSD:

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="modulo">  <!-- Definimos elemento MODULO-->
		<xs:complexType>
			<xs:sequence>
				<xs:element name="duracion" maxOccurs="1">  <!-- Duración del módulo-->
					<xs:complexType>
						<xs:attribute name="horas" type="xs:unsignedShort" use="required"/>  			<!-- Atributos-->
						<xs:attribute name="sesiones" type="xs:unsignedShort" use="required"/> 			<!-- Atributos-->
						<xs:attribute name="sesionesSemanales" type="xs:unsignedByte" use="required"/> 	<!-- Atributos-->
					</xs:complexType>
				</xs:element>
				<xs:element name="nombre" type="tipoNombreLargo" maxOccurs="1"/> <!-- Nombre del módulo-->
				<xs:element name="ciclo" maxOccurs="100"> <!-- Código del ciclo-->
					<xs:complexType>
						<xs:simpleContent>
							<xs:extension base="tipoNombreLargo"> <!-- Restricciones sobre el código-->
								<xs:attribute name="codigo" type="t_codciclo"/>
							</xs:extension>
						</xs:simpleContent>
					</xs:complexType>
				</xs:element>
				<xs:element name="contenidos"> <!-- Contenido del módulo-->
					<xs:complexType>
						<xs:sequence>
							<xs:element name="UD" minOccurs="1" maxOccurs="20">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="titulo" type="tipoNombreLargo"/>
										<xs:element name="descripcion" type="xs:string" minOccurs="0"/>
									</xs:sequence>
									<xs:attribute name="num" type="t_num21" use="required"/>
									<xs:attribute name="sesiones" type="t_num21" use="required"/>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
			<xs:attribute name="codigo" type="t_codmodulo"/>
		</xs:complexType>
	</xs:element>

	<xs:simpleType name="t_codciclo">  								<!-- código de ciclo-->
		<xs:restriction base="xs:string"> 							<!-- tipo de datos-->
			<xs:pattern value="C[BSM][A-Z]{3}[0-9][0-9]"/> 			<!-- patrón que debe cumplir-->
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="t_codmodulo">
		<xs:restriction base="xs:string">
			<xs:pattern value="MP[0-9]{4}"/>
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="t_num21">
		<xs:restriction base="xs:unsignedShort">
			<xs:maxInclusive value="21"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:simpleType name="tipoNombreLargo">
		<xs:restriction base="xs:string">
			<xs:maxLength value="150"/>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>